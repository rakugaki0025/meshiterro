<h1>Users show#top</h1> <!-- users_show ディレクトリ -->
  
  <!-- ユーザーの詳細 -->
  
  <div>
    <h3><%= @user.name %></h3>
      <!-- -->
    <%= image_tag @user.get_profile_image(100,100) %>
      <!-- -->
    
    <% if @user == current_user %>
        <!-- current_user_サインインしているユーザーを取得する -->
      
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <!-- ユーザーのプロフィール編集-->
      
    <% end %>
  
  </div>
  
  
  <!-- ユーザーの投稿一覧 -->
  
    <%= render 'post_images/list', post_images: @post_images %>
      <!-- render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] いわゆるリンク -->

